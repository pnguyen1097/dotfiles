[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date='format:%a, %m-%d %I:%M%P'
	st = status
	ci = commit
	co = checkout
	br = branch
	unstage = reset HEAD
	undo = reset --soft HEAD~1
	d = diff
	dc = diff --cached
	wd = diff --color-words
	wdc = diff --cached --color-words
[color]
	ui = true
[push]
	default = simple
[core]
	autocrlf = input
[include]
  path = ~/.gitconfig.local
[commit]
	verbose = true
